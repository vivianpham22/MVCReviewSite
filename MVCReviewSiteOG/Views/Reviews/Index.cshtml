@model IEnumerable<MVCReviewSiteOG.Models.Review>

@{
    ViewBag.Title = "Index";
}

<link href="@Url.Content("~/Content/ReviewStyles.css")" rel="stylesheet" type="text/css" />


<h2>Reviews On Travel</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>



<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 card">        
                <div class="thumbnail">
                    <div class="background">
                        <div class="transbox">
                            <h2>
                                I traveled: <br /> @Html.DisplayFor(modelItem => item.Category.Type)
                            </h2>
                            <h4>
                                Destination: @Html.DisplayFor(modelItem => item.Location)
                            </h4>
                            <h4>
                                @Html.DisplayFor(modelItem => item.Title)
                            </h4>
                            <h5>
                                @Html.DisplayFor(modelItem => item.Content)
                            </h5>
                            <h6>
                                @item.Published.ToShortDateString()
                            </h6>

                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ReviewID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ReviewID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ReviewID })
                            <p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
